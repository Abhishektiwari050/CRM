{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task",
    "DATABASE_URL": "@database_url",
    "SECRET_KEY": "@secret_key",
    "ENVIRONMENT": "production"
  },
  "functions": {
    "api/index.py": {
      "memory": 1024,
      "maxDuration": 10,
      "includeFiles": "backend/**"
    }
  }
}
